{% extends 'baseBack.html.twig' %}

{% block title %}  Vendeurs {% endblock %}

{% block content %}
    <h1>Gestion des Vendeurs</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div>
                <a href="{{ url('vendeur_new') }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Pays</th>
                        <th>Ville</th>
                        <th>Image</th>
                        <th>Tel</th>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Heure_ouverture</th>
                        <th>Heure_fermeture</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for vendeur in vendeurs %}
                        <tr>
                            <td>{{ vendeur.id }}</td>
                            <td>{{ vendeur.pays }}</td>
                            <td>{{ vendeur.ville }}</td>
                            <td>{{ vendeur.image }}</td>
                            <td>{{ vendeur.tel }}</td>
                            <td>{{ vendeur.nom }}</td>
                            <td>{{ vendeur.type }}</td>
                            <td>{{ vendeur.heureOuverture ? vendeur.heureOuverture|date('H:i:s') : '' }}</td>
                            <td>{{ vendeur.heureFermeture ? vendeur.heureFermeture|date('H:i:s') : '' }}</td>
                            <td> <a href="{{ url('vendeur_edit' , {id : vendeur.id} ) }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a> </td>
                            <td><a href="{{ url('vendeur_delete' , {id : vendeur.id} ) }}"> <img src="{{ asset('back/img/icon-delete.jpg') }}" alt="edit" width="50px" height="50px" >  </a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}


