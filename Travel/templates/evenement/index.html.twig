{% extends 'baseBack.html.twig' %}

{% block title %}  Evenements {% endblock %}

{% block content %}
    <h1>Gestion des Evenements</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div>
            <a href="{{ url('evenement_new') }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date Debut</th>
                    <th>Date Fin</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Ville</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </thead>

                <tbody>
                {% for evenement in evenements %}
                    <tr>
                        <td>{{ evenement.nom }}</td>
                        <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }}</td>
                        <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</td>
                        <td>{{ evenement.description }}</td>
                        <td>{{ evenement.prix }}</td>
                        <td>{{ evenement.ville }}</td>
                        <td> <a href="{{ url('evenement_edit' , {id : evenement.id} ) }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a> </td>
                        <td><a href="{{ url('evenement_delete' , {id : evenement.id} ) }}"> <img src="{{ asset('back/img/icon-delete.jpg') }}" alt="edit" width="50px" height="50px" >  </a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>





{% endblock %}


