
{% extends 'baseBack.html.twig' %}

{% block title %}  offers {% endblock %}

{% block content %}


<body id="page-top">
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date_debut</th>
                    <th>Date_fin</th>
                    <th>Pourcentage</th>
                    <th>modifier</th>
                    <th>supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for offre in offres %}
                    <tr>
                        <td>{{ offre.nom }}</td>
                        <td>{{ offre.dateDebut ? offre.dateDebut|date('Y-m-d') : '' }}</td>
                        <td>{{ offre.dateFin }}</td>
                        <td>{{ offre.pourcentage }}</td>
                        <td> <a href="{{ url('admin_edit' , {id : evenement.id} ) }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a> </td>
                        <td><a href="{{ url('admin_delete' , {id : evenement.id} ) }}"> <img src="{{ asset('back/img/icon-delete.jpg') }}" alt="edit" width="50px" height="50px" >  </a></td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>





{% endblock %}


