{% extends 'baseBack.html.twig' %}

{% block title %}  Fournisseurs {% endblock %}

{% block content %}


<body id="page-top">
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>nom</th>
                                            <th>prenom</th>
                                            <th>email</th>
                                            <th>etat</th>
                                            <th>modifier</th>
                                            <th>supprimer</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                      {% for user in users %}
                                        <tr>
                                            <td>{{ user.nom}}</td>
                                            <td>{{ user.prenom}}</td>
                                            <td>{{ user.email}}</td>
                                            <td>{{ user.etat}}</td>
                                            <td> <a href="{{ url('fs_edit' , {id : user.id} ) }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a> </td>
                                            <td><a href="{{ url('fs_delete' , {id : user.id} ) }}"> <img src="{{ asset('back/img/icon-delete.jpg') }}" alt="edit" width="50px" height="50px" >  </a></td>
                                        </tr>
                                            {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->




{% endblock %}
