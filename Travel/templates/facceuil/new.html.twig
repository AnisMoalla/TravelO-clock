{% extends 'baseBack.html.twig' %}

{% block title %}  new famille {% endblock %}

{% block content %}

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block"> <img src="{{ asset('back/img/host.jpeg') }}" width="400" height="530"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4"> new famille </h1>
                            </div>
                            <div class="form-group">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_widget(form.nom , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'nom'}} ) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.description , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Description'}} ) }}
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.nb_place , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'nombre de place'}} ) }}
                                {{ form_errors(form.nb_place) }}
                            </div>
                            <div class="form-group">
                                <div class=" mb-3 mb-sm-0">
                                    {{ form_widget(form.adresse , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'adresse'}} ) }}
                                    {{ form_errors(form.adresse) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class=" mb-3 mb-sm-0">
                                    {{ form_widget(form.user , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'adresse'}} ) }}
                                    {{ form_errors(form.user) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class=" mb-3 mb-sm-0">
                                    {{ form_widget(form.image , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'adresse'}} ) }}
                                    {{ form_errors(form.image) }}
                                </div>
                            </div>
                            {{ form_widget(form.ajouter , {'attr': {'class': 'form-control form-control-user btn btn-info' , 'placeholder' : 'adresse'}} ) }}

                            <hr>
                            {{ form_end(form) }}
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
