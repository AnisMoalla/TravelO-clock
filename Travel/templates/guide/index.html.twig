{% extends 'baseBack.html.twig' %}

{% block title %}  Guides {% endblock %}

{% block content %}
<h1>Gestion des Guides</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div>
                <a href="{{ url('guide_new') }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Pays</th>
                        <th>Ville</th>
                        <th>Image</th>
                        <th>Tel</th>
                        <th>Age</th>
                        <th>Sexe</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Language</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for guide in guides %}
                        <tr>
                            <td>{{ guide.id }}</td>
                            <td>{{ guide.pays }}</td>
                            <td>{{ guide.ville }}</td>
                            <td>{{ guide.image }}</td>
                            <td>{{ guide.tel }}</td>
                            <td>{{ guide.age }}</td>
                            <td>{{ guide.sexe }}</td>
                            <td>{{ guide.nom }}</td>
                            <td>{{ guide.prenom }}</td>
                            <td>{{ guide.language }}</td>
                            <td> <a href="{{ url('guide_edit' , {id : guide.id} ) }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a> </td>
                            <td><a href="{{ url('guide_delete' , {id : guide.id} ) }}"> <img src="{{ asset('back/img/icon-delete.jpg') }}" alt="edit" width="50px" height="50px" >  </a></td>

                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}


